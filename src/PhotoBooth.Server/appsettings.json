{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "logs/photobooth.log",
      "Append": false
    }
  },
  "AllowedHosts": "*",
  "Camera": {
    "Provider": "OpenCv",
    "DeviceIndex": 0,
    "CaptureLatencyMs": 100,
    "FramesToSkip": 5,
    "FlipVertical": false,
    "PixelOrder": "ARGB",
    "JpegQuality": 90,
    "PreferredWidth": 1920,
    "PreferredHeight": 1080
  },
  "Capture": {
    "CountdownDurationMs": 3000
  },
  "Input": {
    "EnableKeyboard": false
  },
  "PhotoStorage": {
    "Path": ""
  },
  "Trigger": {
    "RestrictToLocalhost": true
  }
}
